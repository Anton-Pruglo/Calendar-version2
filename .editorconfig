root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# styles
[*.css]
indent_style = space
indent_size = 4

# components and code
[*.{js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 120

# dependencies file
[package.json]
indent_style = space
indent_size = 2
